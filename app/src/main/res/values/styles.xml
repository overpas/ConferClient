<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SmallLoginButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_small_login</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingBottom">@dimen/padding_xxs</item>
        <item name="android:paddingTop">@dimen/padding_xxs</item>
        <item name="android:paddingStart">@dimen/padding_xl</item>
        <item name="android:paddingEnd">@dimen/padding_xl</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

    <style name="PostTitle" parent="PostHigherEmphasis">
        <item name="android:textSize">@dimen/text_size_l</item>
    </style>

    <style name="PostAttribute">
        <item name="android:layout_marginStart">@dimen/margin_s</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PostHigherEmphasis" parent="PostAttribute">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PostLowerEmphasis" parent="PostAttribute">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="PostUsername" parent="PostLowerEmphasis">
        <item name="android:layout_marginEnd">@dimen/margin_s</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="PostTime" parent="PostLowerEmphasis">
        <item name="android:layout_marginEnd">@dimen/margin_s</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PostPlainText" parent="PostAttribute">
        <item name="android:layout_marginStart">@dimen/margin_s</item>
        <item name="android:layout_marginEnd">@dimen/margin_s</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">5</item>
    </style>

</resources>
